{
  "name": "stardms-client",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Client app for StarDMS.API",
  "author": "Alvan Rahimli alvanrahimli@gmail.com",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.2",
    "electron": "^9.0.0",
    "electron-debug": "^3.1.0",
    "moment": "^2.26.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "electron-builder": "^22.7.0",
    "tslint": "^5.19.0",
    "typescript": "^3.9.3"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "yarn build && electron ./build/main.js"
  },
  "build": {
    "appId": "yourappid",
    "category": "your.app.category.type",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  }
}
