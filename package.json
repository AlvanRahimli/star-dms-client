{
  "name": "stardms-client",
  "version": "0.1.4",
  "main": "./build/main.js",
  "description": "Client app for StarDMS.API",
  "author": {
    "name": "Alvan Rahimli",
    "email": "alvanrahimli@gmail.com",
    "url": "https://www.facebook.com/alvan.rahimli"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.2",
    "electron-debug": "^3.1.0",
    "moment": "^2.26.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "electron-builder": "^22.7.0",
    "electron": "^9.0.0",
    "tslint": "^5.19.0",
    "typescript": "^3.9.3"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "yarn build && electron ./build/main.js",
    "postinstall": "electron-builder install-app-deps",
    "publish": "yarn run build && electron-builder"
  },
  "build": {
    "appId": "star-dms-client",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
